{
  "framework": "nextjs",
  "buildCommand": "next build && rm -rf .next/cache",
  "devCommand": "next dev",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "app/**/*.{js,ts,tsx}": {
      "maxDuration": 30
    }
  },
  "images": {
    "formats": ["image/webp"],
    "minimumCacheTTL": 86400
  },
  "git": {
    "lfs": false
  }
} 